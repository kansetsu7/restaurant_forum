
<h1 class="text-center">Restaurants management</h1>
<!-- some sorting elements -->
<div class="row">
  <div class="col-xs-12 col-sm-10 col-sm-offset-1">
    <table class="table table-striped">
      <tr>
        <td><%= sortable('Name', @current_title) %></td>
        <td><%= sortable('Category', @current_title) %></td>
        <td></td>
        <td></td>
        <td></td>
      </tr>
    <% @restaurants.each do |restaurant| %>
      <tr>
        <td><%= restaurant.name %></td>
        <td><%= restaurant.category %></td>
        <td><%= link_to 'Show', admin_restaurant_path(restaurant) %></td>
        <td><%= link_to 'Edit', edit_admin_restaurant_path(restaurant) %></td>
        <td><%= link_to 'Delete', admin_restaurant_path(restaurant), method: :delete, data:{confirm:"Are you sure?"} %></td>
      </tr>
    <% end %>
    </table>
    <%= paginate @restaurants %>
    <%= link_to 'New Restaurant', new_admin_restaurant_path() %>

    <p class="text-left">Click attributes to sort</p>
  </div>
</div>

