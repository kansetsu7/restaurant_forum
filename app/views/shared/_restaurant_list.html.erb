<!-- restaurants list，有多寫restaurant-item的class style -->
<% @restaurants.each_with_index do |restaurant, i| %>
  <div class="col-sm-6 col-md-4">
    <%= link_to restaurant_path(restaurant), class: "card" do  %>
      <div class="restaurant-item">
        <%= show_restaurant_img(restaurant.image) %>
        <div class="caption">
          <h3><%= restaurant.name %></h3>
          <p class="label label-default"><%= show_category_name(restaurant.category) %><p>
          <p class="description"><%= truncate(restaurant.description, length: 80) %></p>
          <%= render partial: 'shared/favorite', locals: {restaurant: restaurant} %>
        </div>
      </div>
    <% end %>
  </div>
  <%= clearfixer(i) %>
<% end %>
<!-- 有generate kaminari paginate bootstrap style -->
<div class="col-sm-12">
  <div class="text-center">
    <%= paginate @restaurants %>
  </div>
</div>