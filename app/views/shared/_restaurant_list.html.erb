<!-- restaurants list，有多寫restaurant-item的class style -->
<% @restaurants.each do |restaurant| %>
  <div class="col-sm-6 col-md-4">
    <%= link_to restaurant_path(restaurant), class: "card" do  %>
      <div class="restaurant-item">
        <%= image_tag restaurant.image, class: "img-responsive center-block" %>
        <div class="caption">
          <h3><%= restaurant.name %></h3>
          <p class="label label-default"><%= restaurant.category.name %><p>
          <p class="description"><%= truncate(restaurant.description, length: 80) %></p>
        </div>
      </div>
    <% end %>
  </div>
<% end %>
  
<!-- 有generate kaminari paginate bootstrap style -->
<div class="col-sm-12">
  <div class="text-center">
    <%= paginate @restaurants %>
  </div>
</div>