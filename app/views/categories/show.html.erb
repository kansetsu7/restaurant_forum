<%= render partial: "shared/navtabs" %> 
<div class="row">
  <ul class="nav nav-pills">
    <li role="presentation">
      <%= link_to "全部餐廳", root_path %>
    </li>
    <!-- 這邊判斷category==@category的時候要加 li.active -->
    <% @categories.each do |category| %>
      <li role="presentation" class="<%= "active" if category == @category %>">
        <%= link_to category.name, category_path(category) %>
      </li>
    <% end %>
  </ul>
  <div class="col-sm-12 text-center sort-name"><%= sort_name(@current_direction) %></div> 
  <br>
  <%= render partial: "shared/restaurant_list" %>
</div>
