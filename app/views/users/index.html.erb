<%= render partial: "shared/navtabs" %> 
<div class="row">
  <div class="col-xs-12">
    <h1>美食達人</h1> 
    <hr>
  </div>
</div>
<div class="row">
  <% @users.each do |user| %>
    <div class="col-xs-6 col-sm-4 col-md-3">
      <%= link_to user_path(user), class: 'card' do %>
        <div class="user-item  text-center">
          <%= image_tag 'http://via.placeholder.com/300x300', class: 'img-responsive center-block' %>
          <p><%= user.name %></p>
          <%= render partial: "shared/follow", locals: {user: user} %> 
          <%= render partial: "shared/friend", locals: {user: user} %> 
        </div>
      <% end %>
    </div>  
  <% end %>
</div>

<div class="row">
  <div class="col-xs-12">
    <div class="text-center">
      <%= paginate @users %>
    </div>
  </div>
</div>