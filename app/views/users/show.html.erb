<!-- show user info -->
<div class="row">
  <div class="col-xs-12 col-sm-6 avatar-container">
    <!--  col-sm-10 col-sm-offset-1 col-md-5 col-md-offset-1 -->
    <%= show_avatar(@user.avatar) %>
  </div>
  <div class="col-xs-12 col-sm-6">
    <h1><%= @user.name %></h1>
    <p><b><%= @user.email %></b></p>
    <p><%= @user.intro %></p>
    <% if @user == current_user %>
      <%= link_to('Edit profile', edit_user_path(@user), class: 'btn btn-default') %>
      <%= link_to(edit_user_registration_path, class: "nav-text btn btn-default") do %>
        <%= "#{image_tag("key.svg", class: "nav-icon")} Edit password".html_safe %>
      <% end %>
    <% end %>
    <%= render partial: "shared/follow", locals: {user: @user} %> 
  </div>
</div><br> 
<hr>

<div class="row">
  <!-- about users: followings and followers -->
  <div class="col-md-3">

    <!-- followings -->
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><%= @user.followings.count %> followings</h3>
      </div>
      <div class="panel-body">
        <% @user.followings.each_with_index do |user, i| %>
          <div class="followings">
            <%= image_tag 'http://via.placeholder.com/300x300' %>
            <%= link_to user.name, user_path(user) %>
          </div>
          <%= '<hr>'.html_safe unless i == @user.followings.size - 1 %>
        <% end %>
      </div>
    </div>

    <!-- followers -->
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"><%= @user.followers.count %> followers</h3>
      </div>
      <div class="panel-body">
        <% @user.followers.each_with_index do |user, i| %>
          <div class="followings">
            <%= image_tag 'http://via.placeholder.com/300x300' %>
            <%= link_to user.name, user_path(user) %>
          </div>
          <%= '<hr>'.html_safe unless i == @user.followers.size - 1 %>
        <% end %>
      </div>
    </div>

  </div>

  <!-- about restaurants: commented and favorited -->
  <div class="col-md-9">
    <!-- commented restaurants -->
    <%= render partial: "shared/users_restaurants", locals: {restaurants: @commented_restaurants, title_text: '已評論餐廳'} %> 
    <!-- favorited restaurants -->
    
    <%= render partial: "shared/users_restaurants", locals: {restaurants: @favorited_restaurants, title_text: '收藏的餐廳'} %> 
  </div>

</div>

  <!-- button : back -->
<div class="row">
  <div class="col-md-12 text-center">
    <%= render partial: '/shared/backBtn' %>
  </div>
</div>
  <br>
